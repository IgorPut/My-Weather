        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_Weather"
        xmlns:res="clr-namespace:My_Weather.Properties"
    
        xmlns:globalization="clr-namespace:System.Globalization;assembly=mscorlib"
        xmlns:l="clr-namespace:My_Weather.Localization"
   
        xmlns:Pages="clr-namespace:My_Weather.Pages" x:Name="My_App" x:Class="My_Weather.MainWindow"
        mc:Ignorable="d"
        Title="My App" Width="700" Height="600" Background="Transparent" WindowStyle="None" AllowsTransparency="True" Margin="0" WindowStartupLocation="CenterScreen" Closing="My_App_Closing">

