    <Grid Margin="5" >
        <Border Width="auto" Height="auto" CornerRadius="30,0,30,0" BorderBrush="LimeGreen" BorderThickness="2" >
            <Border.Background>
                <LinearGradientBrush>
                    <LinearGradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="#e7ebf7" Offset="0.0"/>
                            <GradientStop Color="#C7DC230A" Offset="0.5"/>
                        </GradientStopCollection>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Border.Background>
            <Grid ClipToBounds="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="14*"/>
                    <ColumnDefinition Width="15*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!--<TextBlock x:Name="TextBlockHeader" Padding="20,5,5,5" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" Grid.ColumnSpan="2" Foreground="#FFA01B1B" ><Run Text="[App_text]"/><InlineUIContainer>-->
                <TextBlock x:Name="TextBlockHeader" Padding="20,5,5,5" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" Grid.ColumnSpan="2" Foreground="#FFA01B1B" 
                           Text="{l:Localization 'App_text'}">
                </TextBlock>
                <Frame x:Name="Frame1" Content="Frame" Grid.Row="1" Background="#FFCBB44D" Grid.ColumnSpan="2"/>
                <Button x:Name="ButtonMenu" Grid.Row="2" Width="75" Margin="240,5" Template="{StaticResource ButtonTemplate}" HorizontalContentAlignment="Center" Click="ButtonMenu_Click" Cursor="Hand" Grid.ColumnSpan="2">
                    <!--<TextBlock TextAlignment="Center" Text="{x:Static res:Resources.MenuButton}" Foreground="White" />-->
                    <TextBlock TextAlignment="Center" Text="{l:Localization 'MenuButton'}" Foreground="White" />
                </Button>


                <Image x:Name="ImageClose" HorizontalAlignment="Right" Height="26" Width="26" Source="close-window.png" MouseUp="ImageClose_MouseUp" Cursor="Hand" MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" Grid.Column="1">
                    <!--<Image.Effect>
                        <DropShadowEffect/>
                    </Image.Effect>-->
                </Image>
                <Image x:Name="ImageMax" HorizontalAlignment="Right" Height="26" VerticalAlignment="Top" Width="26" Source="icons8-развернуть-окно-80.png" Margin="0,0,62,0" MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" Cursor="Hand" MouseUp="ImageMax_MouseUp" Grid.Column="1"/>
                <Image x:Name="ImageMin" HorizontalAlignment="Right" Height="26" VerticalAlignment="Top" Width="26" Margin="0,0,31,0" Source="icons8-свернуть-окно-80.png" MouseUp="ImageMin_MouseUp" MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" Cursor="Hand" Grid.Column="1"/>
                <Image x:Name="Image_bg" Grid.ColumnSpan="2" Height="314" Margin="151,60,0,0" Grid.Row="1" Width="487" Source="girl.jpg" IsHitTestVisible="False" Opacity="0.2" Visibility="Collapsed"/>
                <TextBlock x:Name="Tb" Grid.Column="1" HorizontalAlignment="Left" Margin="154,10,0,0" Grid.Row="2" TextWrapping="Wrap" 
                           Text="{l:Localization 'Name'}" VerticalAlignment="Top" MinWidth="20"/>
                <!--<TextBlock x:Name="Tb" Grid.Column="1" HorizontalAlignment="Left" Margin="154,10,0,0" Grid.Row="2" TextWrapping="Wrap" 
                           Text="{Binding CurrentCulture.Name, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" MinWidth="20"/>-->
            </Grid>
        </Border>

        <Expander x:Name="ExpanderLang" Header="{l:Localization 'ExpanderLang'}" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" ExpandDirection="Up" Margin="2,0,0,8" 
                  LostFocus="ExpanderLang_LostFocus" >
            <Button Margin="5" LostFocus="Button_LostFocus">
                <Grid>
                    <ListBox Name="languagesList" ItemsSource="{Binding CultureInfos}" SelectedIndex="0" SelectedItem="{Binding CurrentCulture, UpdateSourceTrigger=PropertyChanged }" 
                             ItemContainerStyle="{StaticResource ListBoxItemStyle1}">
                        <ListBox.ItemTemplate >
                            <DataTemplate DataType="{x:Type globalization:CultureInfo}" >
                                <TextBlock Text="{l:Localization KeyBinding={Binding ThreeLetterISOLanguageName}}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Button>
        </Expander>

    </Grid>
</Window>
