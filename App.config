<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="My_Weather.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <connectionStrings>
        <add name="My_Weather.Properties.Settings.FavoriteCitiesConnectionString"
            connectionString="Data Source=(localdb)\MSSQLLocalDB;Initial Catalog=FavoriteCities;Integrated Security=True;Pooling=False"
            providerName="System.Data.SqlClient" />
    </connectionStrings>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<!--Первоначальные установки культуры и начальной страницы, активной кнопки и режима карты. Задаются в My_Weather.Properties.Settings.settings-->
    <userSettings>
        <My_Weather.Properties.Settings>
            <setting name="CultureName" serializeAs="String">
                <value>be-BE</value>
            </setting>
            <setting name="DefaultPage" serializeAs="String">
                <value>/My Weather;component/Pages/CurrentForecastPage.xaml</value>
            </setting>
            <setting name="ActiveButton" serializeAs="String">
                <value>1</value>
            </setting>
            <setting name="MapMode" serializeAs="String">
                <value>ROAD</value>
            </setting>
            <setting name="FrameBackground" serializeAs="String">
                <value>pack://application:,,,/My Weather;component/Images/Background/NightWinter.jpg</value>
            </setting>
            <setting name="WindowPosition" serializeAs="String">
                <value>0,0,0,0</value>
            </setting>
        </My_Weather.Properties.Settings>
    </userSettings>
</configuration>