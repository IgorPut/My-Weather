<Page x:Class="My_Weather.LocationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:My_Weather.Localization"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="640"
      Title="LocationPage">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Location" VerticalAlignment="Center" FontSize="24"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Orientation="Horizontal">
            <Border Width="27" Height="32" Background="#FF138AEE" CornerRadius="10,0,0,10" Cursor="Hand" BorderBrush="#FF138AEE">
                <Image Height="16" VerticalAlignment="Center" Width="16" Source="/My Weather;component/Images/Search_16x.png" HorizontalAlignment="Center"/>
            </Border>
            <TextBox x:Name="SearchText" Height="32" TextWrapping="Wrap" Width="125" Text="митмитмитм" FontSize="18" VerticalAlignment="Top" Panel.ZIndex="2" Cursor="Pen" BorderBrush="#FF138AEE" />
            <Border Width="27" Height="32" Background="#FF138AEE" CornerRadius="0,10,10,0" Cursor="Hand">
                <Image Height="16" Grid.Row="1" VerticalAlignment="Center" Width="16" Source="/My Weather;component/Images/CleanData_16x.png" Panel.ZIndex="1" HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>
        <!--<l:SearchTextBox Width="125" Height="21" />-->



    </Grid>
</Page>
